pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {

            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }

            environment {
                HOME = "${WORKSPACE}"
                GOCACHE = "${WORKSPACE}/.gocache"
                GOMODCACHE = "${WORKSPACE}/.gomodcache"
            }
            steps {
                dir ('bugtracker-backend'){
                    sh 'go test -v ./...'
                    
                }
            }

        }

        stage ('Unit test FrontEnd') {
            agent {
                docker {
                    image 'node:10-alpine'
                    reuseNode true
                }
            }


            steps {
                dir('bugtracker-frontend') {
                    sh '''
                        npm ci
                        npm test

                    '''
                }
            }
        }
    }
}